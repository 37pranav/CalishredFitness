  <!-- Scroll Controls -->
  <script>
    function scrollLeft(btn) {
      const slider = btn.nextElementSibling;
      slider.scrollBy({ left: -300, behavior: 'smooth' });
    }
    function scrollRight(btn) {
      const slider = btn.previousElementSibling;
      slider.scrollBy({ left: 300, behavior: 'smooth' });
    }
